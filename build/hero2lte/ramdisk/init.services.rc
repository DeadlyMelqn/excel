on property:sys.boot_completed=1
    exec u:r:su:s0 root root â€” /sbin/sepolicy.sh
    start sepolicy
    start sysinit

service sepolicy /sbin/sepolicy.sh
    class late_start
    user root
    group root
    seclabel u:r:init:s0
    oneshot
    disabled

service sysinit /sbin/sysinit.sh
    class late_start
    user root
    group root
    seclabel u:r:init:s0
    oneshot
    disabled
